<h1>Gestion des flux</h1>

<p>
<%= link_to 'Ajouer un flux', new_flux_path, :class => "btn btn-default" %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Url</th>
      <th>Titre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fluxes.each do |flux| %>
      <tr>
        <td><%= flux.url %></td>
        <td><%= flux.title %></td>
        <td><%= link_to 'Afficher', flux %></td>
        <td> - </td>
        <td><%= link_to 'Supprimer', flux, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @fluxes %>

<h1>Derniers articles</h1>

<div class="row">

<% @articles.each do |article| %>

  <div class="col-sm-6 col-md-4 extrait">
    <div class="thumbnail">
      <a href="<%= article_path(:id => article.id) %>">
      <% if article.image_url != nil %>
        <img src="<%= article.image_url %>" alt="<%= article.title %>">
      <% end %>
      <div class="caption">
        <p class="popularity"><%= article.views %></p>
        <h4><%= article.title %></h4>
      </div>
      </a>
    </div>
  </div>

<% end %>
</div>
